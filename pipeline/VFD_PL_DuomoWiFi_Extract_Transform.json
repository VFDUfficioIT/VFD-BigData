						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "VFD_DS_Processed_DuomoWiFi_Users_Parquet",
						"type": "DatasetReference",
						"parameters": {
							"year": {
								"value": "@substring(pipeline().parameters.p_dateStart, 0, 4)",
