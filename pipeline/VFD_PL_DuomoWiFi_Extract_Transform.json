					},
					"traceLevel": "Fine"
				}
			},
			{
				"name": "CopyUsersProcessedToFinal",
				"description": "Copia il file temporaneo degli utenti al nome finale",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "TransformUsersRawToProcessed",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.00:10:00",
					"retry": 2,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
