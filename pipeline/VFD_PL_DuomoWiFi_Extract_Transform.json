			{
				"name": "DeleteTempEnrichedFile",
				"description": "Elimina il file temporaneo arricchito",
				"type": "Delete",
				"dependsOn": [
					{
						"activity": "CopyCuratedToFinal",
						"dependencyConditions": [
							"Succeeded"
