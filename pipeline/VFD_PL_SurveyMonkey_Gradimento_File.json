{
	"name": "VFD_PL_SurveyMonkey_Gradimento_File",
	"properties": {
		"activities": [
			{
				"name": "CheckIfProcessedExists",
				"description": "Chiedere ad ADF “esiste quel file Parquet?”",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "VFD_DS_Processed_SurveyMonkey_Gradimento_Parquet",
						"type": "DatasetReference",
						"parameters": {
							"year": "@pipeline().parameters.year",
							"fileName": "@pipeline().parameters.fileName"
						}
					},
					"fieldList": [
						"exists"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "ParquetReadSettings"
					}
				}
			},
			{
				"name": "IfNotExists",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "CheckIfProcessedExists",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@not(activity('CheckIfProcessedExists').output.exists)\n",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "CopyRawToProcessed",
							"description": "Leggere il file Excel e scrivere un Parquet",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "ExcelSource",
									"storeSettings": {
										"type": "AzureBlobFSReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									}
								},
								"sink": {
									"type": "ParquetSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "ParquetWriteSettings"
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "VFD_DS_Raw_SurveyMonkey_Gradimento_Excel",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "VFD_DS_Processed_SurveyMonkey_Gradimento_Parquet",
									"type": "DatasetReference",
									"parameters": {
										"year": "@pipeline().parameters.year",
										"fileName": "@pipeline().parameters.fileName"
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"year": {
				"type": "string"
			},
			"fileName": {
				"type": "string"
			}
		},
		"variables": {
			"fileName": {
				"type": "String"
			},
			"year": {
				"type": "String"
			}
		},
		"folder": {
			"name": "SurveyMonkey"
		},
		"annotations": []
	}
}