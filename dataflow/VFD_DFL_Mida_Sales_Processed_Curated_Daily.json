{
	"name": "VFD_DFL_Mida_Sales_Processed_Curated_Daily",
	"properties": {
		"folder": {
			"name": "Mida/Sales"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "VFD_DS_Processed_Mida_Bookings_Parquet",
						"type": "DatasetReference"
					},
					"name": "sourceProcessed"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "VFD_DS_Curated_Mida_Bookings_Daily_Delta",
						"type": "DatasetReference"
					},
					"name": "sinkCuratedDaily"
				}
			],
			"transformations": [
				{
					"name": "extractDateComponents"
				},
				{
					"name": "aggregateDaily"
				},
				{
					"name": "addMetadata"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourceProcessed",
				"sourceProcessed derive(day = dayOfMonth(visitDate),",
				"          month = month(visitDate),",
				"          year = year(visitDate)) ~> extractDateComponents",
				"extractDateComponents aggregate(groupBy(day,",
				"          month,",
				"          year),",
				"     tickets_sold = sum(tickets_quantity),",
				"          economic_value = sum(amount)) ~> aggregateDaily",
				"aggregateDaily derive(processing_date = currentUTC(),",
				"          data_source = 'ticket_sales_daily') ~> addMetadata",
				"addMetadata sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     format: 'delta',",
				"     compressionCodec: 'snappy') ~> sinkCuratedDaily"
			]
		}
	}
}