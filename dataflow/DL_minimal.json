{
	"name": "DL_minimal",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "VFD_DS_Raw_Mida_Sales_CSV",
						"type": "DatasetReference"
					},
					"name": "sourceTest"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "VFD_DS_Processed_Mida_Sales_Parquet",
						"type": "DatasetReference"
					},
					"name": "sinkTest"
				}
			],
			"transformations": [
				{
					"name": "addTestColumn"
				}
			],
			"scriptLines": [
				"parameters{",
				"     p_folderPath as string,",
				"     p_fileName as string,",
				"     p_fileNameParquet as string",
				"}",
				"source(output(",
				"          guid_pk as string,",
				"          reservation_progressiveCode as string,",
				"          visitDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceTest",
				"sourceTest derive(test_column = 'Test Value',",
				"          param_debug = concat('Params: ', $p_folderPath, '/', $p_fileName)) ~> addTestColumn",
				"addTestColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     umask: 00022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkTest"
			]
		}
	}
}